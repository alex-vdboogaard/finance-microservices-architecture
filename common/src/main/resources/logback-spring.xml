<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Resolve service name and log directory from the Spring context -->
    <springProperty scope="context"
                    name="SERVICE_NAME"
                    source="spring.application.name"
                    defaultValue="unknown-service" />
    <springProperty scope="context"
                    name="LOG_DIR"
                    source="LOG_DIR"
                    defaultValue="logs" />

    <!-- Define log directory -->
    <property name="LOG_PATH" value="${LOG_DIR}/${SERVICE_NAME}" />

    <!-- Console appender for local debugging -->
    <appender name="JSON_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp/>
                <version/>
                <logLevel/>
                <threadName/>
                <loggerName/>
                <message/>
                <mdc/>
                <stackTrace/>
            </providers>
        </encoder>
    </appender>

    <!-- Rolling file appender for persistent structured logs -->
    <appender name="JSON_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/app.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/app-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>14</maxHistory>
        </rollingPolicy>
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp/>
                <version/>
                <logLevel/>
                <loggerName/>
                <threadName/>
                <message/>
                <mdc/>
                <stackTrace/>
            </providers>
        </encoder>
    </appender>

    <!-- Root logger setup -->
    <root level="INFO">
        <appender-ref ref="JSON_CONSOLE" />
        <appender-ref ref="JSON_FILE" />
    </root>
</configuration>
